<resources>
    <!-- Base application theme. -->
    <style name="Theme.Payment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/primary_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" >@color/primary_blue</item>
        <item name="android:navigationBarColor">@color/primaryBackground</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>